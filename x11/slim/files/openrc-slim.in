name="slim"
description="The Simple Login Manager (SLiM)"
command=/usr/local/bin/slim
command_args=""
start_stop_daemon_args="--background"
pidfile="/var/run/slim.pid"

depend(){
	provide xlogin
	keyword -login -shutdown
	need localmount dbus network
}
